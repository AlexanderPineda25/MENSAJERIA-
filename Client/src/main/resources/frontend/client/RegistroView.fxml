<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="frontend.client.Controllers.RegistroController"
            style="-fx-background-color: #ecf0f1;">

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 40;">
            <Label text="Registro de Usuario"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>

            <GridPane hgap="10" vgap="12">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="140"/>
                    <ColumnConstraints halignment="LEFT" minWidth="240"/>
                </columnConstraints>

                <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                <TextField fx:id="txtUsuario"
                           promptText="Ingrese su usuario"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           style="-fx-background-color: white; -fx-background-radius: 5;"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                <TextField fx:id="txtEmail"
                           promptText="Ingrese su email"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-background-color: white; -fx-background-radius: 5;"/>

                <Label text="Contrase単a:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                <PasswordField fx:id="txtPassword"
                               promptText="Ingrese su contrase単a"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"
                               style="-fx-background-color: white; -fx-background-radius: 5;"/>

                <Label text="Confirmar Contrase単a:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                <PasswordField fx:id="txtConfirmarPassword"
                               promptText="Confirme su contrase単a"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"
                               style="-fx-background-color: white; -fx-background-radius: 5;"/>

                <Label text="IP Servidor:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                <TextField fx:id="txtIPServidor"
                           promptText="localhost"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"
                           style="-fx-background-color: white; -fx-background-radius: 5;"/>

                <Label text="IP Cliente:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                <Label fx:id="lblIPCliente"
                       text="Detectando..."
                       GridPane.rowIndex="5" GridPane.columnIndex="1"
                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
            </GridPane>

            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15 0 0 0;">
                <Button fx:id="btnRegistrar"
                        text="Registrar"
                        onAction="#handleRegistrar"
                        defaultButton="true"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-padding: 8 25;"/>

                <Button fx:id="btnCancelar"
                        text="Cancelar"
                        onAction="#handleCancelar"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 25;"/>
            </HBox>

            <Label fx:id="lblEstado"
                   text=""
                   style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d; -fx-padding: 10;"/>
        </VBox>
    </center>
</BorderPane>
